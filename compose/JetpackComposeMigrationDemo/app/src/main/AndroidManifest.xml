<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.thomaskuenneth.jetpackcomposemigrationdemo">

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackMigrationDemo">
        <activity
            android:name=".ViewActivity"
            android:exported="true"
            android:label="@string/view_activity"
            android:theme="@style/Theme.JetpackMigrationDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComposeActivity"
            android:exported="true"
            android:label="@string/compose_activity"
            android:theme="@style/Theme.JetpackMigrationDemo.NoActionBar" />
    </application>

</manifest>